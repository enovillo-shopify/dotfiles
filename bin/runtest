#!/usr/bin/env python3

import glob
import subprocess
import sys


def main(args):
  if len(args) >= 1:
    if ':' in args[0]:
      test_ids = args[0].split(":")

      if len(test_ids) != 2:
        print(f"Bad test spec: {args[0]}")

      else:
        fname = get_test_file(test_ids[0])
        if fname != "":
          command = ["bin/rails", "test", f"{fname}:{test_ids[1]}"]
          print(' '.join(command))
          subprocess.run(command)
    
    else:
        fname = get_test_file(args[0])
        if fname != "":
          command = ["bin/rails", "test", fname]
          print(' '.join(command))
          subprocess.run(command)

  else:
    print("No test file given.")


def get_test_file(name):
  rv = ""

  fnames =glob.glob(f"**/{name}_test.rb", recursive = True)
  if len(fnames) == 0:
    print(f"Test file not found: {name}")

  elif len(fnames) == 1:
    rv = fnames[0]

  else:
    print(f"Found more than 1 test file with the given name:")
    print(*fnames, sep = "\n")

  return rv


if __name__ == "__main__":
  main(sys.argv[1:])
